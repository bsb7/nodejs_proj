<%- include('../partials/header') %> 

<div style="border: 1px solid black;position: fixed; margin-bottom: 2em;width: 100%;height: 6.5vh;background: white;padding:1em 2em 10px 10px;">
  <div style="display: flex;justify-content: space-between;align-items: center; ">
    <h4>All Your Posts</h4>
    <a href="/posts/new" style="text-decoration: none;color: black;">+  Add New Posts</a>
  </div>
  
</div>



    
<div style="overflow: scroll;margin-top:7vh;height: 86vh;box-shadow: inset 1px 1px 5px rgba(0, 0, 0, 0.25); ">
<div class="test">
  <% user.posts.forEach(post=>{ %>
    <a href="/posts/<%= post._id %> " style="display: block;text-decoration: none;color: black;">
      <div style="border: 1px solid #d2d2dd; margin-bottom: 10px; padding: 1em;box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.25);  -webkit-column-break-inside: avoid;page-break-inside: avoid;break-inside: avoid-column;display:table; ">
      <img src="<%= post.image %> " style="border-radius: 7px;margin-bottom: 10px;box-shadow: 1px 1px 15px rgba(0, 0, 0, 0.25);">
      <h5><%= post.title %> </h5> 
      </div>

    </a>
  <% }) %>
</div>

</div>

<%- include('../partials/footer') %>
