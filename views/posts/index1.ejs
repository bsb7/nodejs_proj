<%- include('../partials/mainHeader') %>
<div id="posts" class="d-flex">
  <div class="col-md-2 sidebar p-0">
    <form
      action="/search"
      method="POST"
      class="col d-flex justify-content-center align-items-center p-0 pr-2"
    >
      <div class="my-3 d-flex col">
        <input
          type="text"
          class="form-control m-0 border-0 rounded-0"
          name="text"
          placeholder="Search Post"
        />

        <button class="btn m-0 border-0 rounded-0"></button>
      </div>
    </form>

    <div class="col">
      <h5>Recently Added</h5>
      <% data.forEach(item =>{ %>
