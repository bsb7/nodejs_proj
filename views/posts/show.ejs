<%- include('../partials/header') %>
<div class="col">
      <h1 class="display-4 text-center" ><%= post.title %></h1>

      <img
        class="rounded image-fluid mx-auto d-block"
        src="<%= post.image %> "
        alt=""
      />
      <p class="text-center"><%= post.description %> </p>
      <% post.comments.forEach(comment=>{ %>  
        <p><%= comment.text %> - <span>by:<strong><%= comment.author %></strong>  </span> </p>
      <% }) %>  
</div>
   
<%- include('../partials/footer') %>
